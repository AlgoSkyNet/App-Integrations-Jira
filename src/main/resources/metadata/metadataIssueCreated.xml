<?xml version="1.0" encoding="UTF-8" ?>
<metadata>

    <object id="user" type="com.symphony.integration.user" version="1.0">
        <user email="user.emailAddress" displayName="user.displayName" />
    </object>

    <object id="issue" type="com.symphony.integration.jira.issue" version="1.0">
        <text key="key" path="issue.key" />
        <url key="url" path="issue.self">
            <text value="browse" />
            <text path="issue.key" />
        </url>
        <text key="subject" path="issue.fields.summary" />
        <html key="description" path="issue.fields.description" />
        <text key="issueType" path="issue.fields.issuetype.name" />

        <object id="priority" type="com.symphony.integration.jira.priority" version="1.0">
            <text key="iconUrl" path="issue.fields.priority.iconUrl" />
            <text key="name" path="issue.fields.priority.name" />
        </object>

        <object id="assignee" type="com.symphony.integration.user" version="1.0">
            <user email="issue.fields.assignee.emailAddress" displayName="issue.fields.assignee.displayName" />
        </object>

        <object id="epic" type="com.symphony.integration.jira.epic" version="1.0">
            <text key="name" path="changelog.items.toString" optional="true">
                <filter arrayPath="items" field="field" equals="Epic Link" />
            </text>

            <url key="link" path="issue.self">
                <text key="name" path="changelog.items.field.toString">
                    <filter arrayPath="items" field="field" equals="Epic Link" />
                </text>
            </url>
        </object>

        <textarray key="labels" path="issue.fields.labels" type="com.symphony.integration.jira.label" version="1.0" >
            <text key="text" replace="#" />
        </textarray>
    </object>

</metadata>